<%- include('partials/s-top') %>
    <link rel="stylesheet" href="/css/activities.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div style="background: var(--gold);">
        <%- include('partials/header') %>
    </div>


    <style>
        article {
            max-width: 1200px;
            padding: 20px;
            margin: 0 auto;
        }

        .thumb {
            width: 100%;
            height: auto;
            border-radius: 15px;
            aspect-ratio: 6/3;
            object-fit: cover;
            object-position: center;
        }

        section {
            display: flex;
            gap: 30px;
            padding: 60px;
        }

        main {
            flex: 3;
        }

        aside {
            flex: 1;
        }

        .title {
            display: flex;
            height: 50px;
            align-items: center;
            margin-bottom: 20px;
        }

        .title::after {
            content: "";
            border-top: 1px solid #9E9E9E;
            width: 100%;
            margin-left: 25px;
        }

        .aside-single {
            display: flex;
            gap: 15px;
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }

        .aside-single:hover {
            transform: translateY(-5px);
        }

        .aside-single img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            object-position: center;
            border-radius: 15px;
        }

        .aside-single span {
            color: var(--gray);
        }

        .aside-single p {
            font-weight: bold;
        }

        article img {
            max-width: 100%;
        }

        .newsletter {
            background-color: #e3e2e2;
            padding: 15px;
            border-radius: 10px;
        }

        .newsletter input {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            border: 1px solid gray;
        }

        .newsletter button {
            background-color: #1a1d1c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .newsletter>* {
            display: block;
            margin-bottom: 10px;

        }
    </style>




    <article>
        <h1 style="font-family: 'Poppins', sans-serif;">
            <%= blog.title %>
        </h1>
        <img class="thumb" src="/img/blog/<%= blog.thumbnail %>">

        <section>
            <aside>
                <div class="title">
                    <h3>Featured</h3>
                </div>
                <% for (let f of featured) { %>
                    <a href="/blog/<%= f.slug %>" class="aside-single">
                        <img src="/img/blog/<%= f.thumbnail %>">
                        <div>
                            <span>
                                <%= f.createdAt.getDate().toString().padStart(2, '0' ) %>/<%=
                                        (f.createdAt.getMonth()+1).toString().padStart(2, '0' ) %>/<%=
                                            f.createdAt.getFullYear() %>
                            </span>
                            <p>
                                <%= f.title %>
                            </p>
                        </div>
                    </a>
                    <% } %>

                        <div class="title">
                            <h3>Latest</h3>
                        </div>
                        <% for (let l of latest) { %>
                            <a class="aside-single">
                                <img src="/img/blog/<%= l.thumbnail %>">
                                <div>
                                    <span>
                                        <%= l.createdAt.getDate().toString().padStart(2, '0' ) %>/<%=
                                                (l.createdAt.getMonth()+1).toString().padStart(2, '0' ) %>/<%=
                                                    l.createdAt.getFullYear() %>
                                    </span>
                                    <p>
                                        <%= l.title %>
                                    </p>
                                </div>
                            </a>
                            <% } %>

                                <div class="title">
                                    <h3>Newsletter</h3>
                                </div>
                                <form class="newsletter" action="/subscribe" method="POST">
                                    <label>Subscribe to our newsletter for the latest updates</label>
                                    <input type="email" name="email" placeholder="Your email" required>
                                    <button type="submit">Subscribe</button>
                                </form>

            </aside>

            <main>
                <%- blog.html %>
            </main>
        </section>
    </article>











    <%- include('partials/footer') %>
        <%- include('partials/s-bottom') %>