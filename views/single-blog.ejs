<%- include('partials/s-top') %>
    <div style="background: var(--gold);">
        <%- include('partials/header') %>
    </div>
    <article>
        <h1 style="font-family: 'Poppins', sans-serif; font-size: 2rem;">
            <%= blog.title %>
        </h1>
        <img class="thumb" src="/img/blog/<%= blog.thumbnail %>" alt="<%= blog.title %> blog thumbnail Alyasa Village Lebanon">
        <section>
            <aside>
                <div class="title">
                    <h3>Featured</h3>
                </div>
                <% for (let f of featured) { %>
                    <a href="/blog/<%= f.slug %>" class="aside-single">
                        <img src="/img/blog/<%= f.thumbnail %>" alt="<%= f.title %> blog thumbnail Alyasa Village Lebanon">
                        <div>
                            <span>
                                <%= f.createdAt.getDate().toString().padStart(2, '0' ) %>/<%=
                                        (f.createdAt.getMonth()+1).toString().padStart(2, '0' ) %>/<%=
                                            f.createdAt.getFullYear() %>
                            </span>
                            <p>
                                <%= f.title %>
                            </p>
                        </div>
                    </a>
                    <% } %>
                        <div class="title">
                            <h3>Latest</h3>
                        </div>
                        <% for (let l of latest) { %>
                            <a class="aside-single">
                                <img src="/img/blog/<%= l.thumbnail %>" alt="<%= l.title %> blog thumbnail Alyasa Village Lebanon">
                                <div>
                                    <span>
                                        <%= l.createdAt.getDate().toString().padStart(2, '0' ) %>/<%=
                                                (l.createdAt.getMonth()+1).toString().padStart(2, '0' ) %>/<%=
                                                    l.createdAt.getFullYear() %>
                                    </span>
                                    <p>
                                        <%= l.title %>
                                    </p>
                                </div>
                            </a>
                            <% } %>
                                <div class="title">
                                    <h3>Newsletter</h3>
                                </div>
                                <form class="newsletter" action="/subscribe" method="POST">
                                    <label>Subscribe to our newsletter for the latest updates</label>
                                    <input type="email" name="email" placeholder="Your email" required>
                                    <button type="submit">Subscribe</button>
                                </form>
            </aside>
            <main>
                <%- blog.html %>
            </main>
        </section>
    </article>
    <%- include('partials/footer') %>
        <%- include('partials/s-bottom') %>