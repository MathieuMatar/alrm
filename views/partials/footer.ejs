    }

    .footer>div:nth-of-type(2) {
        padding-left: 20%;
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    footer p {
        margin-top: 20px;
    }




    .rights {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 14px;
        border-top: 1px solid white;
        padding-top: 20px;
        width: 100%;
        flex-wrap: wrap;
        column-gap: 30px;
        margin-top: 20px
    }

    @media (max-width: 900px) {
        .footer {
            flex-direction: column;
        }
    }
</style>

