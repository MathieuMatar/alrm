<style>
    footer {
        background-color: var(--gold);
        padding: 20px;
        color: white;
    }

    .footer {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
    }

    .footer>div {
        flex: 1;
    }

    .footer-icon {
        width: 70%;
